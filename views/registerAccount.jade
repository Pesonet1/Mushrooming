doctype html
html
   head
      title= 'Sign up'
      meta(name='viewport', content='width=device-width, initial-scale=1.0')
      link(href= 'images/favicon.ico', rel='icon')
      link(href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', rel='stylesheet', media='screen')
      link(href='stylesheets/register.css', rel='stylesheet', media='screen')
      script(src='https://code.jquery.com/jquery.js')
      script(src='javascripts/query_functions.js')
      script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
   body
   .container
      h1 MUSHROOM HUNTING
      p Sign up to join the hunt
      br
      form(role='form', action="javascript:registerNewUser()", style='max-width: 300px;')
         .form-group
            input.form-control(type='text', id="username", placeholder='Username')
         .form-group
            input.form-control(type='text', id="email", placeholder='Email')
         .form-group
            input.form-control(type='password', id="password", placeholder='Password')
            br
            button.btn.btn-primary(type='submit') SIGN UP

      a(href='/login') Already have an account? Sign in!
